          <div id="typed-div">
            <span id="typed"></span>
          </div>
          <div id="banner-sign-up">
            <% if false %>
              <% unless user_signed_in? %>
                <a class="llc-button" data-toggle="modal" data-target="#llcModalSignup">Sign Up</a>
              <% end %>
            <% end %>
